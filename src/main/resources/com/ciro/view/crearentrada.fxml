<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="250.0" stylesheets="@modena_dark.css"
            xmlns="http://javafx.com/javafx/8.0.111" fx:controller="com.ciro.controller.CrearEntradaController">
    <children>
        <Label alignment="CENTER" layoutX="111.0" layoutY="14.0" text="Crear Entrada" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <GridPane layoutX="25.0" layoutY="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="40.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Divisa A: " GridPane.halignment="CENTER"/>
                <Label text="Tipo de Cambio: " GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" onAction="#crearEntrada" text="Crear" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="3">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
                <TextField fx:id="txtDivisaA" GridPane.columnIndex="1"/>
                <TextField fx:id="txtTipoCambio" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </GridPane>
    </children>
</AnchorPane>
